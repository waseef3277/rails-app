
<div class="container my-5">
  <%= link_to "New Category", new_category_path, class: "btn btn-success btn-lg mb-4" %>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Category</th>
        <th scope="col"> </th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category|%>
      <tr>
        <th scope="row"> <%= category.id %></th>
        <td> <%= category.name %> </td>
        <td> <%= link_to "Edit", edit_category_path(category), class: "btn btn-info btn-sm" %> </td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>