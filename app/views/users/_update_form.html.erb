<h1 class="display-4 my-4"> Change Password </h1>
<div id="signup_form">
    <%= form_for @user do |f| %>
    <div class="form-group row disabled">
        <%= f.label :username, class: "col-sm-2 col-form-label-lg font-weight-bold" %>
        <div class="col-sm-4">
            <%= f.text_field :username, readonly: true, class: "form-control" %>
        </div>
    </div>

    <div class="form-group row disabled">
        <%= f.label :email, class: "col-sm-2 col-form-label-lg font-weight-bold" %>
        <div class="col-sm-4">
            <%= f.email_field :email, readonly: true, class: "form-control", placeholder: "Enter E-mail" %>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :old_password, "Old Password", class: "col-sm-2 col-form-label-lg font-weight-bold" %>
        <div class="col-sm-4">
            <%= f.password_field :old_password, class: "form-control", placeholder: "Enter Old Password" %>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :password, "New Password", class: "col-sm-2 col-form-label-lg font-weight-bold" %>
        <div class="col-sm-4">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter New Password" %>
        </div>
    </div>
        
    <div class="form-group row">
        <div class="col-sm-2">

        </div>

        <div class="col-sm-2">
            <%= f.submit 'Change Password', class: "btn", id: "article_button" %>
        </div>

    </div>

    <% end %>
</div>