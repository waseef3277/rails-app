<h1 class="display-3 my-4"> Sign Up </h1>
<div id="signup_form">
    <%= form_for @user do |f| %>
    <div class="form-group row ">
        <%= f.label :username, class: "col-sm-2 col-form-label-lg font-weight-bold" %>
        <div class="col-sm-4">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter Username" %>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :email, class: "col-sm-2 col-form-label-lg font-weight-bold" %>
        <div class="col-sm-4">
            <%= f.text_field :email, class: "form-control", placeholder: "Enter E-mail" %>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :password, class: "col-sm-2 col-form-label-lg font-weight-bold" %>
        <div class="col-sm-4">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
        </div>
    </div>

    <div class="form-group row">
        
        <%= f.label "Profile Photo", class: "col-sm-2 col-form-label-lg font-weight-bold", for: "profile_photo_input" %>

        <div class="col-sm-4">
            <%= f.file_field :avatar, id: "profile_photo_input" %>
        </div>

    </div>
        
    <div class="form-group row">
        <div class="col-sm-2">

        </div>

        <div class="col-sm-2">
            <%= f.submit 'Sign Up', class: "btn", id: "article_button" %>
        </div>

    </div>

    <% end %>
</div>
