<h1 class="display-3 my-4"> Log in </h1>
<div id="signup_form">
    <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group row">
        <%= f.label :email, class: "col-sm-2 col-form-label-lg font-weight-bold" %>
        <div class="col-sm-4">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter E-mail" %>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :password, class: "col-sm-2 col-form-label-lg font-weight-bold" %>
        <div class="col-sm-4">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
        </div>
    </div>
        
    <div class="form-group row">
        <div class="col-sm-2">

        </div>

        <div class="col-sm-2">
            <%= f.submit 'Log in', class: "btn", id: "article_button" %>
        </div>

    </div>

    <% end %>
</div>