<%= form_for([@article, @article.comments.build]) do |f| %>

	<div class="form-group">
		<%= f.text_area :content, class: "form-control", placeholder: "Write your comment", id: 'comment_area' %>
	</div>

	<div class="form-group">
		<%= f.submit 'Comment', class: "btn btn-primary btn-sm" %>
	</div>


<%end%>