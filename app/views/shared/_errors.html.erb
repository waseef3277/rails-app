<div class="container mt-4">
	<% if obj.errors.any? %>
		<div class="row">
			<div class="col-sm-12">
				<div class="alert alert-danger" role="alert">
			        <ul class="mb-2">
			            <% obj.errors.full_messages.each do |msg| %>
			                <li> <%= msg %> </li>
			            <% end %>
			        </ul>
				</div>
			</div>
		</div>
	<% end %>
</div>
